<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medium"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="20dp" />

        <Button
            android:id="@+id/pauseButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pause" />
    </LinearLayout>


    <TextView
        android:id="@+id/timerTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:textAlignment="center"
        android:textSize="20dp" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/gameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/wireImageView"
            android:layout_width="370dp"
            android:layout_height="520dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/wire" />

        <ImageView
            android:id="@+id/wireLoopImageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="148dp"
            app:layout_constraintStart_toStartOf="@id/wireImageView"
            app:layout_constraintTop_toTopOf="@+id/wireImageView"
            app:srcCompat="@drawable/wire_loop" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="55dp"
            android:layout_height="50dp"
            android:src="@drawable/hit_box"
            app:layout_constraintBottom_toBottomOf="@id/wireImageView"
            app:layout_constraintEnd_toStartOf="@+id/imageView2"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/wireImageView"
            app:layout_constraintTop_toTopOf="@id/wireImageView"
            app:layout_constraintVertical_bias="0.182" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_marginTop="64dp"
            android:src="@drawable/hit_box"
            app:layout_constraintBottom_toBottomOf="@id/wireImageView"
            app:layout_constraintEnd_toStartOf="@id/imageView3"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@id/imageView1"
            app:layout_constraintTop_toTopOf="@id/wireImageView"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="20dp"
            android:layout_height="50dp"
            android:src="@drawable/hit_box"
            app:layout_constraintBottom_toBottomOf="@id/wireImageView"
            app:layout_constraintEnd_toStartOf="@id/imageView4"
            app:layout_constraintHorizontal_bias="0.262"
            app:layout_constraintStart_toEndOf="@id/imageView2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.18" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="20dp"
            android:layout_height="50dp"
            android:src="@drawable/hit_box"
            app:layout_constraintBottom_toBottomOf="@id/wireImageView"
            app:layout_constraintEnd_toStartOf="@id/imageView5"
            app:layout_constraintStart_toEndOf="@id/imageView3"
            app:layout_constraintTop_toTopOf="@id/wireImageView"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/hit_box"
            app:layout_constraintBottom_toBottomOf="@id/wireImageView"
            app:layout_constraintStart_toEndOf="@id/imageView4"
            app:layout_constraintTop_toTopOf="@id/wireImageView"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="140dp"
            android:layout_height="10dp"
            android:src="@drawable/hit_box"
            app:layout_constraintBottom_toBottomOf="@id/wireImageView"
            app:layout_constraintStart_toEndOf="@+id/imageView5"
            app:layout_constraintTop_toTopOf="@id/wireImageView"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:src="@drawable/hit_box"
            app:layout_constraintBottom_toBottomOf="@id/wireImageView"
            app:layout_constraintStart_toEndOf="@id/imageView6"
            app:layout_constraintTop_toTopOf="@id/wireImageView"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:src="@drawable/hit_box"
            app:layout_constraintEnd_toEndOf="@id/wireImageView"
            app:layout_constraintStart_toEndOf="@id/imageView7"
            app:layout_constraintTop_toTopOf="@id/wireImageView"
            tools:layout_editor_absoluteX="338dp" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="25dp"
            android:layout_height="110dp"
            android:src="@drawable/hit_box"
            app:layout_constraintEnd_toEndOf="@id/wireImageView"
            app:layout_constraintTop_toBottomOf="@id/imageView8"
            app:layout_constraintVertical_bias="0.319" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="30dp"
            android:layout_height="110dp"
            android:src="@drawable/hit_box"
            app:layout_constraintEnd_toEndOf="@id/wireImageView"
            app:layout_constraintTop_toBottomOf="@id/imageView9" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="25dp"
            android:layout_height="65dp"
            android:src="@drawable/hit_box"
            app:layout_constraintBottom_toBottomOf="@id/wireImageView"
            app:layout_constraintEnd_toStartOf="@id/imageView10"
            app:layout_constraintTop_toTopOf="@id/wireImageView"
            app:layout_constraintVertical_bias="0.448" />

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="25dp"
            android:layout_height="50dp"
            android:src="@drawable/hit_box"
            app:layout_constraintBottom_toBottomOf="@id/wireImageView"
            app:layout_constraintEnd_toStartOf="@id/imageView11"
            app:layout_constraintTop_toTopOf="@id/wireImageView" />

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:src="@drawable/hit_box"
            app:layout_constraintBottom_toBottomOf="@id/wireImageView"
            app:layout_constraintEnd_toStartOf="@id/imageView12"
            app:layout_constraintTop_toTopOf="@id/wireImageView"
            app:layout_constraintVertical_bias="0.537" />

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:src="@drawable/hit_box"
            app:layout_constraintBottom_toBottomOf="@id/wireImageView"
            app:layout_constraintEnd_toStartOf="@id/imageView13"
            app:layout_constraintTop_toTopOf="@id/wireImageView"
            app:layout_constraintVertical_bias="0.579" />

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:src="@drawable/hit_box"
            app:layout_constraintBottom_toBottomOf="@id/wireImageView"
            app:layout_constraintEnd_toStartOf="@id/imageView14"
            app:layout_constraintTop_toTopOf="@id/wireImageView"
            app:layout_constraintVertical_bias="0.627" />

        <ImageView
            android:id="@+id/imageView16"
            android:layout_width="35dp"
            android:layout_height="60dp"
            android:src="@drawable/hit_box"
            app:layout_constraintBottom_toBottomOf="@id/wireImageView"
            app:layout_constraintEnd_toStartOf="@id/imageView15"
            app:layout_constraintTop_toTopOf="@id/wireImageView"
            app:layout_constraintVertical_bias="0.72" />

        <ImageView
            android:id="@+id/imageView17"
            android:layout_width="30dp"
            android:layout_height="70dp"
            android:src="@drawable/hit_box"
            app:layout_constraintBottom_toBottomOf="@id/wireImageView"
            app:layout_constraintEnd_toStartOf="@id/imageView16"
            app:layout_constraintTop_toTopOf="@id/wireImageView"
            app:layout_constraintVertical_bias="0.766" />

        <ImageView
            android:id="@+id/imageView18"
            android:layout_width="20dp"
            android:layout_height="60dp"
            android:src="@drawable/hit_box"
            app:layout_constraintBottom_toBottomOf="@id/wireImageView"
            app:layout_constraintEnd_toStartOf="@id/imageView17"
            app:layout_constraintTop_toTopOf="@id/wireImageView"
            app:layout_constraintVertical_bias="0.789" />

        <ImageView
            android:id="@+id/imageView19"
            android:layout_width="10dp"
            android:layout_height="30dp"
            android:src="@drawable/hit_box"
            app:layout_constraintBottom_toBottomOf="@id/wireImageView"
            app:layout_constraintEnd_toStartOf="@id/imageView18"
            app:layout_constraintTop_toTopOf="@id/wireImageView"
            app:layout_constraintVertical_bias="0.781" />

        <ImageView
            android:id="@+id/finishBox"
            android:layout_width="35dp"
            android:layout_height="108dp"
            android:src="@drawable/finish_box"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.611" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>